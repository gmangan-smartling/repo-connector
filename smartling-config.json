{
    "locales": [
         {
            "smartling" : "fr-FR",
            "application" : "fr-FR"
         },
         {
            "smartling" : "de-DE",
            "application" : "de_de"
         },
         {
            "smartling" : "pt-PT",
            "application" : "pt-PT"
         },
         {
            "smartling" : "es-ES",
            "application" : "es-ES"
         },
         {
            "smartling" : "it-IT",
            "application" : "it-IT"
         }
     ],
     "resourceSets": [
         {
            "type"      : "javaProperties",
            "pathRegex" : "messages\\/.*\\.properties"
         },

         {
            "type"                      : "xml",
            "authorizeContent"          : "true",
            "pathRegex"                 : "source\\/.+\\.xml",
            "translationPathExpression" : "translations/${originalFile.baseName}_${locale}.${originalFile.extension}",
            "smartlingDirectives"       : [
                 "smartling.translate_paths = TranslationMessage/Product/TranslationFields/TranslationField",
                 "smartling.variants_enabled = true"
            ]
         }
     ]
}

